# Server Configuration
PORT=3000

# Sendbird Configuration
SENDBIRD_APP_ID=your_sendbird_app_id
SENDBIRD_API_TOKEN=your_sendbird_api_token
SENDBIRD_WEBHOOK_SECRET=your_sendbird_webhook_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100

# EmailJS Configuration
EMAILJS_PUBLIC_KEY=your_public_key
EMAILJS_PRIVATE_KEY=your_private_key
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id
EMAILJS_BULK_TEMPLATE_ID=your_bulk_template_id  # Optional, for bulk emails


